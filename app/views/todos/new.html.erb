<h2>Create Todo Item</h2>
<div class="row">
  <div class="col-md-8">
    <%= form_for Todo.new do |form| %>
      <div class="form-group">
        <%= form.text_field :description, autofocus: true, class: 'form-control', placeholder: 'Description' %>
      </div>
      <div class="form-group">
        <%= form.submit 'Save', class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>